<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#003399"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Unit"
                android:textColor="#ffffff"
                android:longClickable="false"
                android:textStyle="bold|italic" />
            <Spinner
                android:id="@+id/Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:entries="@array/Packets"
                android:layout_marginRight="10dp"
                android:focusable="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desired Unit"
                android:textColor="#ffffff"
                android:textStyle="bold|italic"
                android:layout_marginLeft="15dp"/>

            <Spinner
                android:layout_marginLeft="10dp"
                android:id="@+id/Spinner2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/Packets"
                android:contextClickable="false"
                android:outlineProvider="paddedBounds"
                android:spinnerMode="dialog" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/background_display">

        <TextView
            android:id="@+id/recorder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:layout_weight="2"/>

        <!--<TextView-->
            <!--android:text="NGN"-->
            <!--android:id="@+id/result_currency"-->
            <!--android:layout_width="58dp"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:textSize="15dp"-->
            <!--android:textColor="#ffffff"-->
            <!--android:layout_gravity="right"/>-->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <EditText
            android:background="@color/background_display"
            android:id="@+id/display"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textColor="#ffffff"
            android:cursorVisible="false"
            android:editable="false"
            android:gravity="right"
            android:textSize="30dp"
            android:text="0"
            >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="00dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="1"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="2"
            android:textColor="#000000"
            android:textSize="30dp"/>

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="3"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/operation_border"
            android:id="@+id/buttonMultiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorClicked"
            android:text="ร"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="4"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="5"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="6"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/operation_border"
            android:id="@+id/buttonDivide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="operatorClicked"
            android:text="รท"
            android:textColor="#000000"
            android:textSize="30dp"
            android:clickable="true"
            android:enabled="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" android:orientation="horizontal">

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="7"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="8"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="9"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/operation_border"
            android:id="@+id/buttonAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorClicked"
            android:text="+"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="numberClicked"
            android:text="0"
            android:textColor="#000000"
            android:textSize="30dp" />


        <Button
            android:background="@drawable/operand_border"
            android:id="@+id/buttonPoint"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="decimalClicked"
            android:text="."
            android:textColor="#000000"
            android:textSize="30dp" />

        <Button
            android:background="@drawable/operand_border"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:onClick="deleteClicked"
            android:textColor="#000000"
            android:text="C"
            android:textSize="30dp"
            android:id="@+id/button"/>

        <Button
            android:background="@drawable/operation_border"
            android:id="@+id/buttonSubtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="operatorClicked"
            android:text="โ"
            android:textColor="#000000"
            android:textSize="30dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/operation_border"
            android:id="@+id/buttonEquals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:onClick="equalClicked"
            android:text="="
            android:textColor="#000000"
            android:textSize="40dp"
            android:textAlignment="center"
            android:layout_weight="3"/>
    </LinearLayout>

</LinearLayout>